int opcion3(Pila p)
{

    int menor = 0;
    int tope = desapilar(&p);



}

///**8VO Ejercicio////////////////////////////////////////////////////////////////////////

int opcion8 (Pila p)
{
     int suma = 0;
     int tope = desapilar(&p); //guardamos el top
     int anterior = desapilar(&p); //guardamos el anterior al tope
     suma = tope + anterior;

     return suma;
}

///**9NO Ejercicio/////////////////////////////////////////////////////////////////////

int SumaPila (Pila p)
{
    int suma1 = 0;
    Pila aux;
    inicpila(&aux);

    while(!pilavacia(&p))
    {
        suma1 = suma1 + tope(&p);
        apilar(&aux, desapilar(&p));
    }


    int result = suma1;

    return result;
}

int  Contador (Pila p)
{
    Pila aux;
    inicpila(&aux);

    int contador = 0;

    while(!pilavacia(&p))
    {
        contador++;
        apilar(&aux, desapilar(&p));
    }
        int result = contador;

    return result;
}

 float Division (Pila  p)
 {
     

     float division = (float)suma/cont;

     return division;
 }

 void Promedio (Pila p)
 {
    int suma = SumaPila(p), cont= Contador(p);
     
 }





