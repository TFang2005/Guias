///**FUNCIONES///////////////////////////////////////////////////////////////////////

///**1ER EJERCICIO////////////////////////////////////////////////////////////////////
void CargarMatriz(int dimF, int dimC, int M[dimF][dimC])
{
    int f = 0;
    int c = 0;

    for (f=0; f<dimF; f++){
        for(c=0; c<dimC; c++){
            printf("\nIngrese un numero que desea guargar en la matriz\n");
            scanf("%d", &M[f][c]);
        }
    }
}

///**2DO EJERCICIO/////////////////////////////////////////////////////////////////////
void MostarMatriz(int dimF, int dimC, int M[dimF][dimC])
{
    int f = 0;
    int c = 0;

    for (f=0; f<dimF; f++){
        for(c=0; c<dimC; c++){
            printf("|%d|", M[f][c]);
        }
        printf("\n");
    }
}
