///**5TO EJERCICIO//////////////////////////////////////////////////////
float SacarPromedio(int dimF, int dimC, int M[dimF][dimC])
{
    int f, c;

    int suma = 0;
    int elementos = dimF * dimC;

    for(f=0; f<dimF; f++){
        for(c=0; c<dimC; c++){
         suma += M[f][c];
        }
    }

    return (float)suma/elementos;
}
