///**4TO EJERCICIO//////////////////////////////////////////////////
int SumarMatriz(int dimF, int dimC, int M[dimF][dimC])
{
    int f = 0;
    int c = 0;
    int suma = 0;

    for (f=0; f<dimF; f++){
        for(c=0; c<dimC; c++){
            suma = suma + M[f][c];
        }
    }
    return suma;
}

